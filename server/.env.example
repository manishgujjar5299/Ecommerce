# Database Configuration
MONGO_URI=mongodb://localhost:27017/pressmart
# OR use individual components:
# MONGO_HOST=localhost
# MONGO_PORT=27017
# MONGO_DATABASE=pressmart
# MONGO_USERNAME=your_username
# MONGO_PASSWORD=your_password

# JWT Configuration (CRITICAL - Generate strong secrets!)
JWT_SECRET=your-super-secret-jwt-key-min-64-chars-long-please-change-this
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-different-from-above
JWT_EXPIRY=1h
JWT_REFRESH_EXPIRY=7d

# Server Configuration
PORT=5000
NODE_ENV=development

# Security Configuration
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=30m

# Email Configuration (for future email features)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# File Upload Configuration
MAX_FILE_SIZE=5mb
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Session Configuration
SESSION_SECRET=your-session-secret-key

# Production Security Headers
HELMET_ENABLED=true
CORS_ENABLED=true
